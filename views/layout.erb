<body class="nav-md">
    <div class="container body">
        <div class="main_container">
        <div class="col-md-3 left_col">
            <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
                <a href="/kanon/search" class="site_title"><i class="fa fa-search"></i> <span>Query Portal</span></a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <div class="profile clearfix">
                
                <div class="profile_info">
                <span>Welcome,</span>
                <h2><%=h session[:username]%></h2>
                
                </div>
                <div class="clearfix"></div>
            </div>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                <div class="menu_section">
                
                <ul class="nav side-menu">
                    
                    <li><a><i class="fa fa-search"></i> Search <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                        <li><a href="/kanon/search">Records</a></li>
                        
                    </ul>
                    </li>
                    <li><a><i class="fa fa-plus-square"></i> Permission <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                        <li><a href="/kanon/permission">View</a></li>
                        <li><a href="/kanon/permission/request">Request</a></li>
                    </ul>
                    </li>
                </ul>
                </div>


            </div>
            <!-- /sidebar menu -->

