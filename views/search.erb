
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Search Records</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="row">
        <div class="ln_solid"></div>
        <div class="col-md-12 col-sm-12 col-xs-12 text-center">
        <button id="add_search_filters" class="btn btn-primary" popcorn-target="popcorn_assortments"><i class="fa fa-plus"></i> Add Filters</button>
        </div>
    </div>

    <div class="ln_solid"></div>
    <div class="clearfix"></div>

    <div class="row">
        <form id="searchForm" method="POST" action="#">
            <ul class="list-inline horizontal-list-inline">
                
            </ul>
        </form>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="ln_solid"></div>
        <div class="col-md-12 col-sm-12 col-xs-12 text-center">
            <button id="search_by_filters" class="btn btn-primary" 
            popcorn-target="popcorn_result_assortments"><i class="fa fa-rocket"></i> Run Search</button>
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
        <!-- search results -->
        <div id="result_x_panel">
            <div class="x_panel" style="margin-top: 10px;">
                <div class="x_title">
                    <h2>Search Results <small>Users</small></h2>
                    <ul class="nav navbar-right panel_toolbox no-min-width">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p id="result_message" class="text-muted font-13 m-b-30">
                    Let's start with running a search first!
                    </p>
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- /search results -->
        </div>
    </div>
    
</div>

<!-- search filters popup -->
<div class="popcorn" popcorn-id="popcorn_assortments">
    <div class="popcorn-inner container">
        <h2>Select your assortment of filters</h2>
        <ul id="search_popcorn" class="to_do">
        </ul>
        <a class="popcorn-close" popcorn-close="popcorn_assortments" href="#">x</a>
        <div class="clearfix"></div>
        <div class="text-center"> 
            <button id="search_popcorn_accept" popcorn-close="popcorn_assortments" class="btn btn-success">Apply Filters</button> 
            <button id="search_popcorn_cancel" popcorn-close="popcorn_assortments" class="btn btn-danger">Cancel</button> 
        </div>
    </div>
</div>
<!-- search filters popup -->

<!-- search result selection popup -->
<div class="popcorn" popcorn-id="popcorn_result_assortments">
    <div class="popcorn-inner container">
        <h2>What are you interested in?</h2>
        <p id="result_compulsory" style="display:none; color: #ff0000;">Please select at least one item.</p>
        <ul id="result_popcorn" class="to_do">
        </ul>
        <a class="popcorn-close" popcorn-close="popcorn_result_assortments" href="#">x</a>
        <div class="clearfix"></div>
        <div class="text-center"> 
            <button id="result_popcorn_accept" popcorn-target-close="popcorn_result_assortments" class="btn btn-success">Proceed</button> 
            <button id="result_popcorn_cancel" popcorn-close="popcorn_result_assortments" class="btn btn-danger">Cancel</button> 
        </div>
    </div>
</div>
<!-- search result selection popup -->
<!-- /page content -->

